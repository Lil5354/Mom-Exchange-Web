@model B_M.Models.Entities.CommunityPost

@{
    ViewBag.Title = Model.Title;
}

<div class="post-detail-container page-container">
    <main class="post-main-content" data-aos="fade-up">
        <div class="post-header">
            <div class="card-tags">
                @foreach (var tag in Model.Tags)
                {
                    <span>@tag</span>
                }
            </div>
            <h1>@Model.Title</h1>
            <div class="card-author">
                <img src="@Url.Content(Model.AuthorAvatarUrl)" alt="Avatar của @Model.AuthorName">
                <span>Đăng bởi <strong>@Model.AuthorName</strong> vào ngày @Model.PostDate.ToString("dd/MM/yyyy")</span>
            </div>
        </div>

        <div class="post-featured-image">
            <img src="@Model.ImageUrl" alt="@Model.Title">
        </div>

        <div class="post-body">
            @Html.Raw(Model.Content)
        </div>

        <div class="post-comments">
            <h3>Bình luận (3)</h3>
        </div>
    </main>

    <aside class="post-sidebar" data-aos="fade-left" data-aos-delay="200">
        <div class="sidebar-widget">
            <h4>Về tác giả</h4>
            <div class="author-bio">
                <img src="@Url.Content(Model.AuthorAvatarUrl)" alt="Avatar của @Model.AuthorName">
                <h5>@Model.AuthorName</h5>
                <p>Thành viên từ 2024</p>
                <a href="#" class="cta-button secondary">Xem trang cá nhân</a>
            </div>
        </div>
        <div class="sidebar-widget">
            <h4>Bài viết liên quan</h4>
        </div>
    </aside>
</div>