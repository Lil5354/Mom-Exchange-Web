@model List<MomExchange.Models.CommunityPost>

@{
    ViewBag.Title = "Cộng Đồng";
}

<section class="animated-hero community-hero">
    <div class="hero-content" data-aos="fade-up">
        <h1>Chào mừng tới Cộng đồng MomExchange</h1>
        <p>Nơi các bà mẹ chia sẻ kinh nghiệm, trao đổi kiến thức và hỗ trợ lẫn nhau trên hành trình làm cha mẹ.</p>
    </div>
</section>

<div class="page-container">
    <section class="user-dashboard" data-aos="fade-up" data-aos-delay="200">
        <div class="dashboard-header">
            <h2>Bảng điều khiển của bạn</h2>
            <a href="#" class="cta-button primary"><i class="fa-solid fa-plus"></i> Viết bài mới</a>
        </div>
        <div class="dashboard-tabs">
            <div class="dashboard-tab active">
                <i class="fa-solid fa-file-lines"></i>
                <span>Bài đăng của tôi (5)</span>
            </div>
            <div class="dashboard-tab">
                <i class="fa-solid fa-retweet"></i>
                <span>Yêu cầu trao đổi (2)</span>
            </div>
            <div class="dashboard-tab">
                <i class="fa-regular fa-bookmark"></i>
                <span>Đã lưu</span>
            </div>
        </div>
    </section>

    <div class="post-grid" data-aos="fade-up" data-aos-delay="300">
        @foreach (var post in Model)
        {
            <article class="post-card">
                <div class="card-image">
                    <a href="@Url.Action("Details", "Community", new { id = post.Id })">
                        <img src="@post.ImageUrl" alt="@post.Title">
                    </a>
                </div>
                <div class="card-content">
                    <div class="card-tags">
                        @foreach (var tag in post.Tags)
                        {
                            <span>@tag</span>
                        }
                    </div>
                    <h3 class="card-title">
                        <a href="@Url.Action("Details", "Community", new { id = post.Id })">@post.Title</a>
                    </h3>
                    <div class="card-author">
                        <img src="@Url.Content(post.AuthorAvatarUrl)" alt="Avatar của @post.AuthorName">
                        <span>Đăng bởi <strong>@post.AuthorName</strong> - @post.PostDate.ToString("dd/MM/yyyy")</span>
                    </div>
                    <a href="@Url.Action("Details", "Community", new { id = post.Id })" class="details-link">
                        Đọc tiếp <i class="fa-solid fa-arrow-right"></i>
                    </a>
                </div>
            </article>
        }
    </div>
</div>