@model IEnumerable<B_M.Models.Entities.SocialPost>

@{
    ViewBag.Title = "Cộng Đồng Mẹ Bỉm Sữa";
}

<div class="social-page-container page-container">
    <aside class="social-sidebar left-sidebar" data-aos="fade-right">
        <div class="user-profile-widget sidebar-widget">
            <img src="/images/avatar1.jpg" alt="Your Avatar" class="profile-avatar">
            <h4>Mẹ An Nhiên</h4>
            <p class="profile-handle">me_an_nhien</p>
            <div class="profile-stats">
                <div><span>125</span><p>Bạn bè</p></div>
                <div><span>32</span><p>Bài viết</p></div>
            </div>
        </div>
        <div class="navigation-widget sidebar-widget">
            <ul>
                <li class="active"><a href="#"><i class="fa-solid fa-newspaper"></i> Bảng tin</a></li>
                <li><a href="#"><i class="fa-solid fa-user-group"></i> Bạn bè</a></li>
                <li><a href="#"><i class="fa-solid fa-comments"></i> Tin nhắn</a></li>
                <li><a href="#"><i class="fa-solid fa-bell"></i> Thông báo</a></li>
                <li><a href="#"><i class="fa-regular fa-bookmark"></i> Đã lưu</a></li>
            </ul>
        </div>
    </aside>

    <main class="social-feed" data-aos="fade-up" data-aos-delay="100">
        <div class="create-post-box">
            <div class="create-post-input">
                <img src="/images/avatar1.jpg" alt="Your Avatar">
                <textarea placeholder="Mẹ An Nhiên ơi, bạn đang nghĩ gì?"></textarea>
            </div>
            <div class="create-post-actions">
                <button><i class="fa-solid fa-image"></i> Thêm ảnh/video</button>
                <button><i class="fa-solid fa-tags"></i> Gắn thẻ</button>
                <button class="cta-button primary">Đăng bài</button>
            </div>
        </div>

        @foreach (var post in Model)
        {
            <div class="feed-post">
                <div class="post-author">
                    <img src="@Url.Content(post.AuthorAvatarUrl)" alt="Avatar của @post.AuthorName">
                    <div>
                        <h4>@post.AuthorName</h4>
                        <span>@post.PostTime</span>
                    </div>
                </div>
                <p class="post-text">@post.Content</p>
                @if (!string.IsNullOrEmpty(post.ImageUrl))
                {
                    <div class="post-image">
                        <img src="https://i.pinimg.com/736x/1f/00/c0/1f00c01fd4c44c557f3a705b7b4fa8e2.jpg" alt="Hình ảnh bài đăng">
                    </div>
                }
                <div class="post-feedback">
                    <span><i class="fa-solid fa-thumbs-up"></i> @post.LikeCount Thích</span>
                    <span>@post.CommentCount Bình luận</span>
                </div>
                <div class="post-actions">
                    <button><i class="fa-regular fa-thumbs-up"></i> Thích</button>
                    <button><i class="fa-regular fa-comment"></i> Bình luận</button>
                    <button><i class="fa-solid fa-share"></i> Chia sẻ</button>
                </div>
            </div>
        }
    </main>

    <aside class="social-sidebar right-sidebar" data-aos="fade-left" data-aos-delay="200">
        <div class="sidebar-widget">
            <h4>Gợi ý kết bạn</h4>
        </div>
        <div class="sidebar-widget">
            <h4>Nhóm cho bạn</h4>
        </div>
    </aside>
</div>