<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Brand Dashboard - MomExchange</title>

    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700;800&display=swap" rel="stylesheet">
    
    <style>
        /* Brand Layout Styles - Pink/Purple Theme */
        :root {
            --primary-pink: #d63384;
            --secondary-pink: #e91e63;
            --light-pink: #fce4ec;
            --pastel-pink: #f8e8f0;
            --accent-pink: #f06292;
            --dark-pink: #c2185b;
            --text-dark: #1e293b;
            --text-light: #64748b;
            --bg-light: #f8fafc;
            --white: #ffffff;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --info: #06b6d4;
        }

        body {
            background: linear-gradient(135deg, var(--pastel-pink) 0%, var(--light-pink) 100%);
            font-family: 'Montserrat', sans-serif;
            color: var(--text-dark);
        }

        .brand-container {
            display: flex;
            min-height: 100vh;
        }

        .brand-sidebar {
            width: 280px;
            background: linear-gradient(180deg, var(--primary-pink) 0%, var(--dark-pink) 100%);
            color: white;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
            box-shadow: 4px 0 20px rgba(214, 51, 132, 0.3);
            border-right: 1px solid rgba(255, 255, 255, 0.1);
        }

        .brand-sidebar-header {
            padding: 25px 20px;
            border-bottom: 1px solid rgba(255,255,255,0.15);
            text-align: center;
            background: rgba(255, 255, 255, 0.05);
        }

        .brand-sidebar-header h3 {
            margin: 0;
            color: white;
            font-weight: 800;
            font-size: 20px;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .brand-sidebar-header p {
            margin: 8px 0 0 0;
            color: rgba(255, 255, 255, 0.8);
            font-size: 13px;
            font-weight: 500;
        }

        .brand-nav {
            padding: 25px 0;
        }

        .brand-nav-item {
            display: block;
            padding: 18px 25px;
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border-left: 4px solid transparent;
            font-weight: 500;
            position: relative;
            overflow: hidden;
        }

        .brand-nav-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 0;
            height: 100%;
            background: linear-gradient(90deg, var(--accent-pink), var(--secondary-pink));
            transition: width 0.3s ease;
            z-index: -1;
        }

        .brand-nav-item:hover {
            background-color: rgba(255,255,255,0.1);
            border-left-color: var(--accent-pink);
            color: white;
            text-decoration: none;
            transform: translateX(5px);
        }

        .brand-nav-item:hover::before {
            width: 100%;
        }

        .brand-nav-item.active {
            background: linear-gradient(90deg, rgba(240, 98, 146, 0.2), rgba(233, 30, 99, 0.1));
            border-left-color: var(--accent-pink);
            color: var(--accent-pink);
            font-weight: 600;
        }

        .brand-nav-item i {
            width: 20px;
            margin-right: 10px;
            text-align: center;
        }

        .brand-main {
            flex: 1;
            margin-left: 280px;
            padding: 0;
        }

        .brand-header {
            background: linear-gradient(135deg, var(--white) 0%, var(--pastel-pink) 100%);
            padding: 20px 35px;
            box-shadow: 0 4px 20px rgba(214, 51, 132, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid rgba(214, 51, 132, 0.1);
        }

        .brand-header h1 {
            margin: 0;
            color: var(--text-dark);
            font-size: 28px;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary-pink), var(--accent-pink));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .brand-user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .brand-user-info .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--accent-pink), var(--secondary-pink));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 18px;
            box-shadow: 0 4px 12px rgba(240, 98, 146, 0.3);
            border: 3px solid rgba(255, 255, 255, 0.2);
        }

        .brand-user-info .user-details h6 {
            margin: 0;
            color: var(--text-dark);
            font-weight: 700;
            font-size: 16px;
        }

        .brand-user-info .user-details small {
            color: var(--text-light);
            font-weight: 500;
        }

        .brand-content {
            padding: 35px;
            background: transparent;
        }

        .brand-card {
            background: var(--white);
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(214, 51, 132, 0.1);
            margin-bottom: 25px;
            border: 1px solid rgba(214, 51, 132, 0.1);
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .brand-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 40px rgba(214, 51, 132, 0.15);
        }

        .brand-card-header {
            padding: 25px 30px;
            border-bottom: 1px solid rgba(214, 51, 132, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: linear-gradient(135deg, var(--pastel-pink), var(--white));
        }

        .brand-card-header h5 {
            margin: 0;
            color: var(--text-dark);
            font-weight: 700;
            font-size: 18px;
        }

        .brand-card-body {
            padding: 30px;
        }

        .btn-brand {
            background: linear-gradient(135deg, var(--accent-pink), var(--secondary-pink));
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 12px rgba(240, 98, 146, 0.3);
            position: relative;
            overflow: hidden;
        }

        .btn-brand::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn-brand:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(240, 98, 146, 0.4);
            color: white;
        }

        .btn-brand:hover::before {
            left: 100%;
        }

        .btn-brand-secondary {
            background: linear-gradient(135deg, var(--text-light), #94a3b8);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 12px rgba(100, 116, 139, 0.3);
        }

        .btn-brand-secondary:hover {
            background: linear-gradient(135deg, #64748b, #475569);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(100, 116, 139, 0.4);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 35px;
        }

        .stat-card {
            background: var(--white);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(214, 51, 132, 0.1);
            text-align: center;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid rgba(214, 51, 132, 0.1);
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent-pink), var(--secondary-pink));
        }

        .stat-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 16px 48px rgba(214, 51, 132, 0.2);
        }

        .stat-card .stat-icon {
            width: 70px;
            height: 70px;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 28px;
            color: white;
            background: linear-gradient(135deg, var(--accent-pink), var(--secondary-pink));
            box-shadow: 0 8px 20px rgba(240, 98, 146, 0.3);
        }

        .stat-card .stat-number {
            font-size: 36px;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary-pink), var(--accent-pink));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 8px;
        }

        .stat-card .stat-label {
            color: var(--text-light);
            font-weight: 600;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .table-brand {
            width: 100%;
            border-collapse: collapse;
            margin-top: 25px;
            background: var(--white);
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(214, 51, 132, 0.08);
        }

        .table-brand th,
        .table-brand td {
            padding: 20px;
            text-align: left;
            border-bottom: 1px solid rgba(214, 51, 132, 0.1);
        }

        .table-brand th {
            background: linear-gradient(135deg, var(--pastel-pink), var(--light-pink));
            font-weight: 700;
            color: var(--text-dark);
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .table-brand tr:hover {
            background: linear-gradient(135deg, rgba(240, 98, 146, 0.05), rgba(233, 30, 99, 0.05));
        }

        .table-brand tr:last-child td {
            border-bottom: none;
        }

        .badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .badge-success {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
        }

        .badge-danger {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
        }

        .badge-warning {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: white;
        }

        .badge-info {
            background: linear-gradient(135deg, #06b6d4, #0891b2);
            color: white;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .brand-sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .brand-main {
                margin-left: 0;
            }

            .brand-header {
                padding: 20px 25px;
            }

            .brand-content {
                padding: 25px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .brand-card {
                margin-bottom: 20px;
            }

            .brand-card-header,
            .brand-card-body {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="brand-container">
        <!-- Sidebar -->
        <div class="brand-sidebar">
            <div class="brand-sidebar-header">
                <h3><i class="fas fa-store"></i> Brand Dashboard</h3>
                <p>@Session["FullName"]</p>
            </div>
            
            <nav class="brand-nav">
                <a href="@Url.Action("Dashboard", "Brand")" class="brand-nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                    <i class="fas fa-tachometer-alt"></i> Tổng quan
                </a>
                <a href="@Url.Action("Index", "Brand")" class="brand-nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                    <i class="fas fa-building"></i> Thông tin thương hiệu
                </a>
                <a href="@Url.Action("Details", "Brand", new { id = ViewBag.BrandId })" class="brand-nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Details" ? "active" : "")">
                    <i class="fas fa-eye"></i> Xem trang thương hiệu
                </a>
                <a href="@Url.Action("Index", "Product")" class="brand-nav-item">
                    <i class="fas fa-box"></i> Quản lý sản phẩm
                </a>
                <a href="@Url.Action("Index", "Trade")" class="brand-nav-item">
                    <i class="fas fa-exchange-alt"></i> Trao đổi
                </a>
                <a href="@Url.Action("Index", "Clearance")" class="brand-nav-item">
                    <i class="fas fa-tags"></i> Thanh lý
                </a>
                <div style="border-top: 1px solid rgba(255,255,255,0.1); margin: 20px 0;"></div>
                <a href="@Url.Action("Index", "Home")" class="brand-nav-item">
                    <i class="fas fa-home"></i> Về trang chủ
                </a>
                <a href="@Url.Action("Logout", "Account")" class="brand-nav-item">
                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="brand-main">
            <!-- Header -->
            <div class="brand-header">
                <h1>@ViewBag.Title</h1>
                <div class="brand-user-info">
                    <div class="user-avatar">
                        @(Session["FullName"]?.ToString().Substring(0, 1).ToUpper() ?? "B")
                    </div>
                    <div class="user-details">
                        <h6>@Session["FullName"]</h6>
                        <small>Thương hiệu</small>
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="brand-content">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert" style="background-color: #d4edda; border: 1px solid #c3e6cb; color: #155724; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                        <strong>Thành công!</strong> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="float: right; background: none; border: none; font-size: 20px; cursor: pointer;">&times;</button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="background-color: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                        <strong>Lỗi!</strong> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="float: right; background: none; border: none; font-size: 20px; cursor: pointer;">&times;</button>
                    </div>
                }

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <script>
        AOS.init({
            duration: 800,
            once: true
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 5000);
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
