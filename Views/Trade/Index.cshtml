@model List<MomExchange.Models.TradePost>

@{
    ViewBag.Title = "Trao Đổi Đồ Dùng";
}

<section class="animated-hero trade-hero">
    <div class="hero-content" data-aos="fade-up">
        <h1>Trao Đổi Đồ Dùng - Cũ Người Mới Ta</h1>
        <p>Tìm kiếm và trao đổi những món đồ hữu ích trong cộng đồng các bà mẹ thông thái.</p>
    </div>
</section>

<div class="page-container">
    <div class="trade-grid">
        @foreach (var post in Model)
        {
            <div class="trade-card" data-aos="fade-up" data-aos-delay="@(Model.IndexOf(post) * 100)">
                <div class="trade-offer-section">
                    <p class="section-label">Mẹ <strong>@post.SellerName</strong> đang có:</p>
                    <div class="trade-item-image">
                        <img src="@Url.Content(post.ItemToOffer.ImageUrls.FirstOrDefault())" alt="@post.ItemToOffer.Name">
                    </div>
                    <h3 class="trade-item-name">@post.ItemToOffer.Name</h3>
                </div>

                <div class="trade-separator">
                    <i class="fa-solid fa-right-left"></i>
                </div>

                <div class="trade-want-section">
                    <p class="section-label">Muốn đổi lấy:</p>
                    <ul class="wanted-items-list">
                        @foreach (var item in post.DesiredItemsDescription.Split(';'))
                        {
                            <li><i class="fa-solid fa-check"></i> @item.Trim()</li>
                        }
                    </ul>
                </div>

                <div class="trade-card-footer">
                    <div class="seller-info">
                        <img src="@Url.Content(post.SellerAvatarUrl)" alt="Avatar của @post.SellerName">
                        <span>@post.SellerName - @post.Location</span>
                    </div>
                    <button class="cta-button primary">Đề nghị trao đổi</button>
                </div>
            </div>
        }
    </div>
</div>