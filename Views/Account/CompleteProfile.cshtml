@model B_M.Models.CompleteProfileViewModel
@{
    ViewBag.Title = "Hoàn thiện hồ sơ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Response.ContentType = "text/html; charset=utf-8";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="margin-top: 50px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); border: none;">
                <div class="card-header text-white text-center" style="background: linear-gradient(135deg, #e15b7f, #f47b8e); padding: 20px;">
                    <h3 style="margin-bottom: 0;">
                        <i class="fas fa-user-plus" style="margin-right: 8px;"></i>
                        Hoàn thiện hồ sơ
                    </h3>
                    <p style="margin-bottom: 0; margin-top: 10px; opacity: 0.9;">Chào mừng @Model.FullName! Hãy hoàn thiện thông tin để sử dụng đầy đủ tính năng</p>
                </div>
                <div class="card-body" style="padding: 30px;">
                    @using (Html.BeginForm("CompleteProfile", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.UserID)
                        @Html.HiddenFor(m => m.Email)
                        @Html.HiddenFor(m => m.FullName)

                        <div class="form-group" style="margin-bottom: 20px;">
                            <label for="UserName" style="font-weight: bold; color: #333; margin-bottom: 8px; display: block;">
                                <i class="fas fa-user" style="margin-right: 8px; color: #007bff;"></i>
                                Tên đăng nhập <span style="color: #dc3545;">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.UserName, new { 
                                @class = "form-control", 
                                @placeholder = "Nhập tên đăng nhập để đăng nhập bằng cách khác",
                                @required = "required",
                                @style = "padding: 12px; font-size: 16px;"
                            })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">Tên đăng nhập này sẽ dùng để đăng nhập thay vì email</small>
                        </div>

                        <div class="form-group" style="margin-bottom: 20px;">
                            <label for="Password" style="font-weight: bold; color: #333; margin-bottom: 8px; display: block;">
                                <i class="fas fa-lock" style="margin-right: 8px; color: #007bff;"></i>
                                Mật khẩu <span style="color: #dc3545;">*</span>
                            </label>
                            @Html.PasswordFor(m => m.Password, new { 
                                @class = "form-control", 
                                @placeholder = "Nhập mật khẩu mới",
                                @required = "required",
                                @style = "padding: 12px; font-size: 16px;"
                            })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">Mật khẩu tối thiểu 6 ký tự</small>
                        </div>

                        <div class="form-group" style="margin-bottom: 20px;">
                            <label for="ConfirmPassword" style="font-weight: bold; color: #333; margin-bottom: 8px; display: block;">
                                <i class="fas fa-lock" style="margin-right: 8px; color: #007bff;"></i>
                                Xác nhận mật khẩu <span style="color: #dc3545;">*</span>
                            </label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { 
                                @class = "form-control", 
                                @placeholder = "Nhập lại mật khẩu",
                                @required = "required",
                                @style = "padding: 12px; font-size: 16px;"
                            })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group" style="margin-bottom: 20px;">
                            <label for="PhoneNumber" style="font-weight: bold; color: #333; margin-bottom: 8px; display: block;">
                                <i class="fas fa-phone" style="margin-right: 8px; color: #007bff;"></i>
                                Số điện thoại
                            </label>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { 
                                @class = "form-control", 
                                @placeholder = "Nhập số điện thoại (không bắt buộc)",
                                @type = "tel",
                                @style = "padding: 12px; font-size: 16px;"
                            })
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group" style="margin-bottom: 20px;">
                            <label for="Address" style="font-weight: bold; color: #333; margin-bottom: 8px; display: block;">
                                <i class="fas fa-map-marker-alt" style="margin-right: 8px; color: #007bff;"></i>
                                Địa chỉ
                            </label>
                            @Html.TextAreaFor(m => m.Address, new { 
                                @class = "form-control", 
                                @placeholder = "Nhập địa chỉ (không bắt buộc)",
                                @rows = "3",
                                @style = "padding: 12px; font-size: 16px;"
                            })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                        </div>

                        <div class="alert alert-info" style="background-color: #e3f2fd; border: none; border-radius: 8px; padding: 15px; margin-bottom: 20px;">
                            <i class="fas fa-info-circle" style="margin-right: 8px;"></i>
                            <strong>Lưu ý:</strong> Sau khi hoàn thiện, bạn có thể đăng nhập bằng:
                            <ul style="margin-bottom: 0; margin-top: 10px; padding-left: 20px;">
                                <li>Email: <strong>@Model.Email</strong></li>
                                <li>Tên đăng nhập: <strong id="username-preview">[Sẽ hiển thị sau khi nhập]</strong></li>
                                <li>Hoặc tiếp tục dùng Google</li>
                            </ul>
                        </div>

                        <div style="display: flex; flex-direction: column; gap: 10px;">
                            <button type="submit" class="btn btn-primary" style="padding: 12px 30px; font-size: 16px; font-weight: 600; border-radius: 8px; background: linear-gradient(135deg, #e15b7f, #f47b8e); border: none;">
                                <i class="fas fa-check" style="margin-right: 8px;"></i>
                                Hoàn thiện hồ sơ
                            </button>
                            <a href="@Url.Action("Login", "Account")" class="btn btn-secondary" style="padding: 12px 30px; font-size: 16px; border-radius: 8px; text-decoration: none; text-align: center;">
                                <i class="fas fa-arrow-left" style="margin-right: 8px;"></i>
                                Quay lại đăng nhập
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Preview username
        document.getElementById('UserName').addEventListener('input', function() {
            const preview = document.getElementById('username-preview');
            if (this.value.trim()) {
                preview.textContent = this.value;
            } else {
                preview.textContent = '[Sẽ hiển thị sau khi nhập]';
            }
        });

        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .form-control:focus {
        border-color: #e15b7f;
        box-shadow: 0 0 0 0.2rem rgba(225, 91, 127, 0.25);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #e15b7f, #f47b8e);
        border: none;
        border-radius: 10px;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(225, 91, 127, 0.4);
        background: linear-gradient(135deg, #d14a6f, #e36a7e);
    }
    
    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }
    
    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
        color: white;
        text-decoration: none;
    }
    
    .form-group label {
        color: #333;
        margin-bottom: 8px;
    }
    
    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
    }
    
    .alert-info {
        border-radius: 10px;
    }
    
    .alert-info ul {
        padding-left: 20px;
    }
    
    /* Responsive */
    @@media (max-width: 768px) {
        .card {
            margin-top: 20px;
        }
        
        .card-body {
            padding: 20px !important;
        }
    }
</style>
